<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="run.mycode.untiednations.competition.ui.GameController">
   <bottom>
      <HBox maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="status" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="The UntiedNations is Established" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ProgressBar maxHeight="1.7976931348623157E308" prefWidth="302.0" progress="0.0" />
         </children>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin></HBox>
   </bottom>
   <center>
      <ImageView fx:id="mapView" fitHeight="600.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin></ImageView>
   </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <HBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="back" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#goBack" text="◀">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label fx:id="yearLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="- 1945 -" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="forward" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#goForward" text="▶">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <right>
      <Accordion fx:id="accordion" BorderPane.alignment="CENTER" expandedPane="$legendPane">
        <panes>
          <TitledPane fx:id="eventPane" animated="true" expanded="false" text="Register of Events">
               <content>
                  <VBox>
                     <children>
                        <ListView fx:id="paperTape" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="-10.0" left="-10.0" right="-10.0" top="-10.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
               </content>
          </TitledPane>
          <TitledPane fx:id="legendPane" animated="true" expanded="true" text="Map Legend">
               <content>
                  <VBox>
                     <children>
                        <ListView fx:id="mapLegend" maxWidth="1.7976931348623157E308" minWidth="-Infinity" VBox.vgrow="NEVER">
                           <VBox.margin>
                              <Insets bottom="-10.0" left="-10.0" right="-10.0" top="-10.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
               </content>
          </TitledPane>
        </panes>
      </Accordion>
   </right>
</BorderPane>
